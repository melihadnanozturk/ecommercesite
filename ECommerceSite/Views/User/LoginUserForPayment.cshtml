
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>

    @using (Html.BeginForm("LoginUserForPayment", "User", FormMethod.Post))
    {
        <div class="login-container" style="width : 300px">
            <h1>Maoco.com</h1>
            <h2>Login</h2>
            <form class="login-form">
                <div class="form-group">
                    <label for="username">User Name</label>
                    <input type="text" id="username" name="username">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password">
                </div>

                @* Hata Mesajı *@
                @if (!String.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="error-message">
                        @ViewBag.ErrorMessage
                    </div>
                }
                <br />
                <br />
                <button type="submit" class="btn btn-success">Enter</button>
                <button type="submit" class="btn btn-primary" formaction="@Url.Action("Route", "Users")">Create Account !</button>
            </form>
            <div class="signup-link">
                @Html.ActionLink("Continue Without Membership", "CompleteMakePayment", "Home")

            </div>
        </div>
    }

</body>
</html>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f0f0f0;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .login-container {
        background-color: white;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        .login-container h1 {
            color: black;
        }

    .login-form {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .form-group {
        text-align: left;
        margin-bottom: 15px;
    }

        .form-group label {
            display: block;
            margin-bottom: 5px;
        }

        .form-group input {
            width: calc(100% - 20px);
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

    button {
        background-color: black;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        button:hover {
            background-color: #333;
        }

    .signup-link {
        margin-top: 15px;
    }

        .signup-link a {
            color: #007bff;
            text-decoration: none;
        }

            .signup-link a:hover {
                text-decoration: underline;
            }
</style>
