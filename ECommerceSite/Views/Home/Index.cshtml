@model ECommerceSite.Models.ViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<main>

    <div class="container " style="margin-bottom: 30px">
        <div id="carouselExampleControls" class="carousel slide own-slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/Images/Slider/24019352_6874272.jpg" class="d-block w-100" style="width: 300px; height: 300px;" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/Images/Slider/fabulous-life-shopping-online-feminine.jpg" class="d-block w-100" style="width: 300px; height: 300px;" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/Images/Slider/e-ticaret-yazilimi_64423.jpeg" class="d-block w-100" style="width: 300px; height: 300px;" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>


    <div class="container d-flex justify-content-around align-items-center" style="margin-top: 4rem; margin-bottom: 4rem;">
        @using (Html.BeginForm("ListTechProducts", "Home", FormMethod.Get))
        {
            <button type="submit" class="border border-dark  btn_purple" style="display: inline-block; width: 150px; height: 40px; line-height: 40px; text-align: center;">
                <i class="bi bi-motherboard "></i> Technology
            </button>
        }
        @using (Html.BeginForm("ListEduProducts", "Home", FormMethod.Get))
        {
            <button class="border border-dark  btn_purple" style="display: inline-block; width: 150px; height: 40px; line-height: 40px; text-align: center;">
                <i class="bi bi-book "></i> Education
            </button>
        }

        @using (Html.BeginForm("ListTextProducts", "Home", FormMethod.Get))
        {
            <button class="border border-dark btn_purple" style="display: inline-block; width: 150px; height: 40px; line-height: 40px; text-align: center;">
                <i class="bi bi-person "></i> Textile
            </button>
        }
    </div>


    <div class="container home-card">
        <div class="row">

            @foreach (var item in Model.Tech_Prod_List.Take(3))
            {
                <div class="col-md-4">
                    <div class="card mb-3">
                        <!-- Görsel üstte yer alacak -->
                        <img src="@Url.Content(item.Image)" class="card-img-top img-fluid rounded-start" style="height:200px">

                        <!-- Metin içerikleri altta yer alacak -->
                        <div class="card-body d-flex flex-column own-card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Prod_Name)</h5>
                            <div class="card-text-container flex-grow-1 d-flex align-items-center">
                                <p class="card-text own-truncate">@Html.DisplayFor(modelItem => item.Description)</p>
                            </div>
                            <p class="card-text"><small class="text-muted">Product not to be missed</small></p>
                            <a href="@Url.Action("GetTechProdDetails", "Home", new { id = item.Id })" class="btn btn-outline-success w-100 mt-auto"> Show Product Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <!-- Altaki row dışarı çıkarıldı -->
        <div class="row">
            @foreach (var item in Model.Edu_Prod_List.Take(3))
            {
                <div class="col-md-4">
                    <div class="card mb-3">
                        <!-- Görsel üstte yer alacak -->
                        <img src="@Url.Content(item.Image)" class="card-img-top img-fluid rounded-start" style="height:200px">

                        <!-- Metin içerikleri altta yer alacak -->
                        <div class="card-body d-flex flex-column own-card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Prod_Name)</h5>
                            <div class="card-text-container flex-grow-1 d-flex align-items-center">
                                <p class="card-text own-truncate">@Html.DisplayFor(modelItem => item.Description)</p>
                            </div>
                            <p class="card-text"><small class="text-muted">Product not to be missed</small></p>
                            <a href="@Url.Action("GetEduProdDetails", "Home", new { id = item.Id })" class="btn btn-outline-success w-100 mt-auto"> Show Product Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row">
            @foreach (var item in Model.Text_Prod_List.Take(3))
            {
                <div class="col-md-4">
                    <div class="card mb-3">
                        <!-- Görsel üstte yer alacak -->
                        <img src="@Url.Content(item.Image)" class="card-img-top img-fluid rounded-start" style="height:200px">

                        <!-- Metin içerikleri altta yer alacak -->
                        <div class="card-body d-flex flex-column own-card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Prod_Name)</h5>
                            <div class="card-text-container flex-grow-1 d-flex align-items-center">
                                <p class="card-text own-truncate">@Html.DisplayFor(modelItem => item.Description)</p>
                            </div>
                            <p class="card-text"><small class="text-muted">Product not to be missed</small></p>
                            <a href="@Url.Action("GetTextProdDetails", "Home", new { id = item.Id })" class="btn btn-outline-success w-100 mt-auto"> Show Product Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</main>



