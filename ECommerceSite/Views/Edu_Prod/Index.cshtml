@model IEnumerable<ECommerceSite.Models.Edu_Prod>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdminPanel.cshtml";
}

<h2>Education Production PANEL</h2>
<div style="width:100%;height:3px; margin-top:1rem; background:black" ;></div>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Prod_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stok)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Edu_Category.Category)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Prod_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stok)
        </td>
        <td>
            <img src="@Url.Content(item.Image)" class="rounded img-fluid" alt="..." style="width: 75px; height: 40px; ">
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Edu_Category.Category)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
<br />

<p>
    @Html.ActionLink("Create New", "Create",null, new { @class = "btn btn-warning" })
</p>
